
    <form action="" class="p-3 mt-3">
        <div class="form-row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <label for="username" class="form-label d-flex p-2">Username</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="profileUsername" placeholder='{{account.username}}'>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <p for="password" class="d-flex p-2">Password</p>
                </div>
                <div class="col-8">
                    <a href="/change-password" class="text-decoration-none">Change Password</a>
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <label for="name" class="form-label d-flex p-2">Your Name</label>
                </div>
                <div class="col-8">
                    <input type="text" class="form-control" id="profileName" placeholder="{{user.name}}">
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <label for="email" class="form-label d-flex p-2">Email</label>
                </div>
                <div class="col-8">
                    <input type="email" class="form-control" id="profileEmail" placeholder="{{user.email}}">
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <label for="phonenumber" class="form-label d-flex p-2">Phone Number</label>
                </div>
                <div class="col-8">
                    <input type="number" class="form-control" id="profilePhonenum" placeholder="{{user.SDT}}">
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <label for="name" class="form-label d-flex p-2">Date Of Birth</label>
                </div>
                <div class="col-8">
                    <input class="date-picker form-control" id="profileDoB" width="276" placeholder="{{user.DoB}}"/>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="input-group mb-3">
                <div class="col-2">
                    <label for="name" id="profileType" class="form-label d-flex p-2">Type</label>
                </div>
                <div class="col-8">
                    <div class="form-check form-check-inline p-2">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions"
                            id="profileStudentType" value="option1" checked>
                        <label class="form-check-label" for="inlineRadio1">Student</label>
                    </div>
                    <div class="form-check form-check-inline p-2">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions"
                            id="profileLecturerType" value="option2" disabled>
                        <label class="form-check-label" for="inlineRadio2">Lecturer</label>
                    </div>
                    <div class="form-check form-check-inline p-2">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions"
                            id="profileTAType" value="option3" disabled>
                        <label class="form-check-label" for="inlineRadio3">TA</label>
                    </div>
                    <div class="form-check form-check-inline p-2">
                        <input class="form-check-input" type="radio" name="inlineRadioOptions"
                            id="profileAdminType" value="option3" disabled>
                        <label class="form-check-label" for="inlineRadio3">Admin</label>
                    </div>
                </div>
            </div>
        </div>
        <div class="w-100 d-flex justify-content-center">
            <button type="button" id="btnSaveProfile" class="btn btn-primary mb-3 btn-lg">Save</button>
        </div>
    </form>
