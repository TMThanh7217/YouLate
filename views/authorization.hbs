<div class="container-fluid d-flex justify-content-center align-items-center p-5">
    <form action="/authorization/sign-in" id='formSignIn' class="form-signin shadow-default radius-sm p-5 w-lg-25 w-md-25 w-sm-50 w-xs-50">
        <h2 id="formSignInTitle" class="page-title">Sign-in</h2>

        <label for="inputSignInUsername">UserName</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fas fa-user-circle"></i></div>
            </div>
            <input type="text" name="inputSignInUsername" id="inputSignInUsername" class="form-control">
        </div>
        <label for="inputSignInPwd">Password</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fas fa-key"></i></div>
            </div>
            <input type="password" name="inputSignInPwd" id="inputSignInPwd" class="form-control">
        </div>
        <br>
        <div class="form-check mb-2 mr-sm-2">
            <input class="form-check-input" type="checkbox" name='checkSignInRemember' id="checkSignInRemember">
            <label class="form-check-label" for="checkSignInRemember">Remember me</label>
        </div>
        <br>
        <div class="form-end__button-group w-100 d-flex justify-content-center">
            <button id="btnFormSignIn" class="btn btn-primary">Sign in</button>
        </div>
        <br>
        <div class="line-container d-flex justify-content-center"><div class="line"></div></div>
        <br>
        <div class="w-100 d-flex justify-content-center">
            <span>Don't have account yet? <a id="linkSignUp" href="#">Sign up here</a></span>
        </div>
    </form>
    
    <form action="#" id="formSignUp" class="form-signup shadow-default radius-sm p-5 w-lg-25 w-md-25 w-sm-50 w-xs-50">
        <h2 id="formSignUpTitle" class="page-title">Sign-up</h2>
        <div id='signUpAlert' class='alert' style="display: none;"><strong>Success!</strong> <p id="signUpMessage"></p> </div>
        
        <label for="inputSignUpUsername">UserName</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fas fa-user-circle"></i></div>
            </div>
            <input type="text" name="inputSignUpUsername" id="inputSignUpUsername" class="form-control">
        </div>
        <label for="inputSignUpPwd">Password</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fas fa-key"></i></div>
            </div>
            <input type="password" name="inputSignUpPwd" id="inputSignUpPwd" class="form-control">
        </div>
        <label for="inputSignUpConfirmPwd">Re-Enter Password</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <div class="input-group-text"><i class="fas fa-redo"></i></i></div>
            </div>
            <input type="password" name="inputSignUpConfirmPwd" id="inputSignUpConfirmPwd" class="form-control">
        </div>
        <br>
        <div class="form-check mb-2 mr-sm-2">
            <input class="form-check-input" type="checkbox" name='checkSignUpToU' id="checkSignUpToU">
            <label class="form-check-label" for="checkSignUpToU">By checking this box you accept our <a id='tempOfUseLink' href="#">Temp Of Use</a></label>

            <!-- The Modal -->
            <div class="modal" id="tempOfUseModal">
