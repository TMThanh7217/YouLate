<div class="container-fluid shadow-default">
    <h2 class="page-title">Admin Manage Account</h2>

    <form action="#" class="form-inline form-search w-100">
        <div class="form-group w-100">
            <section>
                <div>
                    <label for="inputSearch">Search</label>
                    <input type="text" name="inputSearch" id="inputSearch" class="form-control"
                        placeholder="Search ...">
                </div>
                <div>
                    <label for="selectStatus" class="text-center">Type</label>
                    <select class="custom-select" id="selectStatus">
                        <option value="1" selected>Select Type</option>
                        <option value="1">Lecturer</option>
                        <option value="2">TA</option>
                        <option value="3">Admin</option>
                        <option value="4">Student</option>
                    </select>
                </div>
                <div>
                    <br>
                    <button type="button" name="btnReset" id="btnReset" class="btn btn-secondary"><i
                            class="fas fa-redo"></i> Redo</button>
                </div>
                <div>
                    <br>
                    <button type="button" name="btnCancel" id="btnCancel" class="btn btn-secondary"><i
                            class="fas fa-times"></i> Cancel</button>
                </div>
                <div>
                    <br>
                    <button id="btn-add-account" type="button" data-toggle="modal" data-target="#exampleModal"
                        class="btn btn-secondary">
                        <i class="fas fa-plus"></i> Add Account</button>
                </div>
            </section>
        </div>
    </form>

    <table class="table text-center">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Username</th>
                <th scope="col">Password</th>
                <th scope="col">Type</th>
                <th scope="col">Manage</th>
            </tr>
        </thead>
        <tbody>
            {{#each account}}
            <tr data-id={{this.id}}>
                <td><a class="text-decoration-none">{{this.id}}</a></td>
                <td name='accountName'>{{this.username}}</td>
                <td name='accountResetPwd'><button type="button" name="btnAccountResetPwd" id="btnAccountResetPwd" 
                    class="btn btn-secondary"><i class="fas fa-redo-alt"></i> Reset password</button></td>
                <td name='accountType'>{{this.type}}</td>
    
                <td>
                    <button id="btn-edit-account" type="button" class="btn btn-outline-secondary btn-edit-account" 
                        data-toggle="modal" data-target="#editAccountModal"><i class="far fa-edit"></i></button>

                    <button type="button" class="btn btn-outline-danger btn-delete-account" data-toggle="modal"
                        data-target="#deleteModal"><i class="far fa-trash-alt"></i></button>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>

    <nav class="pagination-navbar" aria-label="Page">
        <ul class="pagination justify-content-center">
            <li class="page-item disabled">
                <a class="page-link" href="#" tabindex="-1" aria-disabled="true">Previous</a>
            </li>
            <li class="page-item"><a class="page-link" href="?limit=5&page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="?limit=5&page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="?limit=5&page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="?limit=5&page=4">4</a></li>
            <li class="page-item">
                <a class="page-link" href="#">Next</a>
            </li>
        </ul>
    </nav>
</div>

<!-- Modal add account-->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Add Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="name">Username</span>
                                </div>
                                <input type="text" class="form-control" id="name">
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button type="button" id="btn-confirm-add-account" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete -->
<div class="modal fade" id="deleteModal" tabindex="-1" role="dialog"
    aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Warning</h5>
                <button type="button" class="close" data-dismiss="modal"
                    aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p>Are you sure you want to delete this user?</p>
            </div>
            <div class="modal-footer">
                <button id="btn-confirm-delete-account" type="button" class="btn btn-danger">Delete</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

{{!-- Modal edit account --}}
<div class="modal fade" id="editAccountModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Edit Account</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form>
                    <div class="row">
                        <div class="col">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text" for="name">Username</span>
                                </div>
                                <input type="text" class="form-control" id="inputAccountEditUserName" placeholder="">
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col">
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <label for="selectAccountEditType" class="text-center input-group-text">Type</label>
                                    <select class="custom-select" id="selectAccountEditType">
                                        <option value="none" selected disabled hidden>Select Type</option>
                                        <option value="0">0</option>
                                        <option value="1">1</option>
                                        <option value="2">2</option>
                                        <option value="3">3</option>
                                    </select>
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
            <div class="modal-footer">
                <button id="btn-confirm-edit-account" type="button" class="btn btn-primary">Submit</button>
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>